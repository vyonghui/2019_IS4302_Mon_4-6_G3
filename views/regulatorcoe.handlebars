    <script type="text/javascript">

function logout() {
 localStorage.removeItem('username');
 
                
                      $.ajax({
    method: "POST",
            url: "/logout",

        
        }).done(function (data) {
          console.log("DONE");
          
          window.location.replace("/login");
            }).fail(function (error) {
   console.log(error.responseText)
  })
  }
function approve(coeId){
  

      var modal = document.getElementById('loadMe');
       
     modal.style.backdrop = ('static');
      modal.style.keyboard = ('false');
  modal.style.display = ('block');
    
            $.ajax({
                method: "POST",
                url:  "/"+localStorage.username + "/api/org.nus.carnetwork.VerifyCOE",
            

               data: {
               "$class": "org.nus.carnetwork.VerifyCOE",
                "coeId": coeId,
  "documentStatus": 'VERIFIED',
     "timestamp": new Date(),

                } 
               
				//success: updatePage,
				//error:  error
            }).done(function (msg) {
              alert("COE Verified!");
                  modal.style.display = ('none');
              location.reload();
            }).fail(function (error) {
              
         alert(error.responseJSON.error.message);
            })
}

function reject(coeId){
  
     var modal = document.getElementById('loadMe');
       
     modal.style.backdrop = ('static');
      modal.style.keyboard = ('false');
  modal.style.display = ('block');
      
        
            $.ajax({
                method: "POST",
                url:  "/"+localStorage.username + "/api/org.nus.carnetwork.VerifyCOE",
              

               data: {
               "$class": "org.nus.carnetwork.VerifyCOE",
                "coeId": coeId,
  "documentStatus": 'REJECTED',
     "timestamp": new Date(),

                } 
                
				//success: updatePage,
				//error:  error
            }).done(function (msg) {
                alert("COE Rejected!");
                 modal.style.display = ('none');
               location.reload();
            }).fail(function (error) {
              
          alert(error.responseJSON.error.message);
            })
}

    $(document).ready(function () {
          let currentUser;
   $.ajax({
            url:  "/"+localStorage.username + "/api/system/ping",
            async: false,
            success: (function (data) {
                currentUser = data.participant;
                document.getElementById('loggedInUser').innerHTML = localStorage.username
           
            }),
        })
        let coes = [];
        $.ajax({
            url:  "/"+localStorage.username + "/api/org.nus.carnetwork.COE"
        }).done(function (data) {
            data.forEach(function (coe) {
                coes.push(coe);
            });
                    $('#pending-coes').html(function() {
      
var output = 'All COEs: <hr> <table> <th>COE ID</th>     <th>Owner NRIC</th>   <th>Expiry Date</th>   <th>Status</th>       <th>Approve</th>     <th>Reject</th>   ';

            	for (var i = 0; i < coes.length; i++) {
