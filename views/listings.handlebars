    <script type="text/javascript">
  function logout() {
 localStorage.removeItem('username');
 
                
                      $.ajax({
    method: "POST",
            url: "/logout",

        
        }).done(function (data) {
          console.log("DONE");
          
          window.location.replace("/login");
            }).fail(function (error) {
   console.log(error.responseText)
  })
  }
    document.getElementById('username').innerHTML = localStorage.username;

$(document).ready(function () {
       let currentUser;
        $.ajax({
           url: "/" + localStorage.username + "/api/system/ping",
            async: false,
            success: (function (data) {
                currentUser = data.participant;
                
            })
        })


    $(document).ready(function () {

        let allListings = [];
        $.ajax({
            url: "/" + localStorage.username + "/api/org.nus.carnetwork.CarListing",
        }).done(function (data) {
            data.forEach(function (listing,i) {
              if(listing.seller.substring(35) != currentUser.substring(26) && listing.state==="FOR_SALE"){
                console.log(currentUser);
                allListings.push(listing);
              }
            });
              $('#all-listings').html(function() {
      
var output = '<h2 style="margin:30px 50px">Cars On Sale:</h2> <hr style="margin:0px 50px ">';
           
             
            	for (var i = 0; i < allListings.length; i++) {
                   
           var url = "\\listings\\" + allListings[i].listingId;
           
       output += "<a href=" + url + "> <div class=\"listing-info\">"; 
        output +=   "<h6 style=\"color:black;font-weight:bold;\" class=\"listing-title\">Listing ID: " +allListings[i].listingId+ "</h6>";
        output += "<p style=\"color:black\"  class=\"car-details\">Reserve Price: " + allListings[i].reservePrice +  "</p>";
output += "<p style=\"color:black\"  class=\"car-details\">Description: " + allListings[i].description +  "</p>";

            output += "</div></a>";

     
              }
              
              return output;
                    })
        });


                }
            
        );
  
   });
